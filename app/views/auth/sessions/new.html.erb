<% provide(:title, t("actions.log_in")) %>
<% provide(:icon_class, 'fas fa-sign-in-alt') %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4 mt-3">
      <%= simple_form_for :session, url: login_path do |f| %>
        <%= f.input :username %>
        <%= f.input :password %>
        <div class="text-center mb-3">
          <%= f.button :submit, t("actions.log_in"), class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
