
  <tr id="company_<%= company.id %>">
    <th scope="row">
      <%= link_to 'Edit', update_modal_company_path(company), :remote => true, :'data-toggle' =>  "modal", :'data-target' => '#update-modal', :class => 'btn btn-info btn-sm m-1'  %>
      <%= link_to 'Delete', destroy_modal_company_path(company), :remote => true, :'data-toggle' =>  "modal", :'data-target' => '#destroy-modal', :class => 'btn btn-danger btn-sm m-1'  %>
    </th>
    <td>
      <%= link_to company.name, company_path(company),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#show-modal' }  %>
    </td>
  </tr>
