<div class="modal-header">
  <h5 class="modal-title"><%= title %> Company</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body disable-input">
  <%= form_for @company, remote:true, :html => { :id => form_type +'-form' } do |f| %>
    <div class="form-group">

      <div id="<%= form_type %>-feedback"></div>

      <div class="mb-2">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", placeholder: "Enter company name" %>
      </div>
      <div class="mb-2">
        <%= f.label :created_at %>
        <%= f.text_field :created_at, class: "form-control", disabled:true %>
      </div>
      <div class="mb-2">
        <%= f.label :updated_at %>
        <%= f.text_field :updated_at, class: "form-control updated_at", disabled:true %>
      </div>

    </div>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary mr-2" data-dismiss="modal">Close</button>
  <% if form_type == 'update' %>
    <button type="submit" form="update-form" class="btn btn-primary save">Save</button>
  <% end %>
</div>
<% end %>
