<% if @company.valid? %>
  $('#update-modal').modal('hide');
  $("#company_<%=@company.id%>").replaceWith('<%= j render @company, company: @company %>');
  alert_custom("success", "Company updated successfully!")
<% else %>
  $("#update-form").replaceWith("<%=  j render 'companies/new_edit_form', form_type: 'update' %>");
<% end %>
