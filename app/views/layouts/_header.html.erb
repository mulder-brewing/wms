<header class="page-header">
  <div class="container-fluid">
    <div class="row">
      <div class="col-9 py-1 my-auto">
        <h3 class="page-title m-0"><%= header_icon(yield(:icon_class)) %>  <%= yield(:title) %></h3>
      </div>
      <div class="col-3 py-1 text-right my-auto">
        <% if !yield(:new_link).empty? %>
          <%= btn(Button::NewButton.new(size: Button::Size::SMALL, path: yield(:new_link), remote: true)) %>
        <% end %>
      </div>
    </div>
  </div>
</header>
