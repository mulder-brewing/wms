<% record = modal.form.record %>
<% table = modal.table %>
var modal_id = '<%= modal.id %>';
<% if modal.form.submit_success %>
  hideModal(modal_id);
  $('#<%= table.row_id(record) %>').fadeOut(500, function(){
    $(this).remove();
  });
  alert_custom('<%= Constants::Alert::SUCCESS %>', '<%= t "alert.delete.success" %>');
<% else %>
  alert_custom('<%= Constants::Alert::DANGER %>', '<%= t "alert.delete.failure" %>');
<% end %>
