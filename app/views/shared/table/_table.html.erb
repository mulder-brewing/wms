<div class="table-responsive">
  <table class="table table-striped <%= table.table_class %>">
    <thead class= <%= table.head_class %>>
      <tr>
        <% table.columns.each do |column| %>
          <th scope="col" id="<%= column.id %>"><%= column.header_title %></th>
        <% end %>
      </tr>
    </thead>
    <tbody class= <%= table.body_class %>>
      <% table.records.each do |record| %>
        <%= render partial: table.record_html_path,
          locals: { record: record,
                    table: table
                  }
        %>
      <% end %>
    </tbody>
  </table>
</div>
