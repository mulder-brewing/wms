<% if !current_user?(user) %>
  <tr id="user_<%= user.id %>">
    <th scope="row">
      <%= link_to 'Edit', edit_user_path(user), :remote => true, :'data-toggle' =>  "modal", :'data-target' => '#update-modal', :class => 'btn btn-info btn-sm m-1'  %>
    </th>
    <td>
      <%= link_to user.username, user_path(user),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#show-modal' }  %>
    </td>
    <% if app_admin? %>
      <td><%= user.company.name %></td>
    <% end %>
    <td>
      <%= user.enabled? %>
    </td>
  </tr>
<% end %>
