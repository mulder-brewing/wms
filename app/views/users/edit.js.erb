<% if @user.nil? %>
  alert_custom("warning","User no longer exists");
<% elsif @user.valid? %>
  $("#modal-wrapper").html("<%= j render 'shared/generic_modal', { :form_type => 'update', :title => 'Edit User', :form_path => 'users/new_edit_form' } %>");
  $("#update-modal").modal('show');
<% end %>
