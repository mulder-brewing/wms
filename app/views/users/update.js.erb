<% if @user.valid? %>
  $('#update-modal').modal('hide');
  $("#user_<%=@user.id%>").replaceWith('<%= j render @user, user: @user %>');
  alert_custom("success", "User updated successfully!")
<% else %>
  $("#update-form").replaceWith("<%=  j render 'users/new_edit_form', form_type: 'update' %>");
  if ( $("div.password").hasClass("form-group-invalid") || $("div.password").hasClass("form-group-invalid") ) {
      $("#collapseExample").addClass("show");
  }
<% end %>
